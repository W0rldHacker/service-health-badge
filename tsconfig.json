{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "lib": ["ES2022", "DOM"],
    "types": ["vitest", "node"]
  },
  "include": [
    "src/**/*.js",
    "tests/**/*.js",
    "types/**/*.d.ts",
    "vitest.config.*"
  ]
}
